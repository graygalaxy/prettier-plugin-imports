{
	// format files on save
	"editor.formatOnSave": true,
	// enable file nesting
	"explorer.sortOrder": "type",
	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.patterns": {
		"*.ts": "$(capture).js, $(capture).mjs, $(capture).*.ts, $(capture).ts.snap",
		"*.js": "$(capture).js, $(capture).mjs, $(capture).*.ts, $(capture).ts.snap",
		".env": "*.env, .env.*, .envrc, env.d.ts",
		"package.json": ".npm*, .nvmrc, .pnpm*, pnpm*, package-lock.json, yarn*",
		"readme*": "changelog*, code_of_conduct*, license*, readme*, security.md"
	}
}
